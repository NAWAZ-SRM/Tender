{
    "version": 2,
    "builds": [
      {
        "src": "server/app.py",  
        "use": "@vercel/python"  
      },
      {
        "src": "server/routes/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
        "distDir": "build"  
        }
      }
    ],
    "routes": [
      {
        "src": "/api/predict",   
        "dest": "/server/app.py"
      },
      {
        "src": "/api/(.*)",      
        "dest": "/server/routes/$1"
      },
      {
        "src": "/(.*)",          
        "dest": "/client/$1"
      }
    ]
  }
  